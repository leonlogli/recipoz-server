{
  "name": "recipoz-server",
  "version": "0.1.0",
  "description": "Recipe server built with apollo graphql, express and typescript.",
  "author": "LÃ©on Logli <leonlogli@gmail.com>",
  "main": "./dist/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leonlogli/recipoz-server.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "build": "yarn clean && tsc",
    "serve": "node .",
    "start": "cross-env NODE_ENV=production pm2 start ./dist/index.js",
    "stop": "pm2 stop all",
    "lint": "tsc --noEmit && eslint */**/*.{js,ts} --quiet",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "graphql",
    "es6",
    "es2020",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "apollo",
    "typescript"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "apollo-server-express": "^2.9.12",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.8.0",
    "helmet": "^3.21.2",
    "http-status": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.13",
    "pm2": "^4.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/eslint": "^6.1.3",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.45",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.32",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  }
}
