{
  "name": "recipoz-server",
  "version": "0.1.0",
  "description": "Recipe server built with apollo graphql, express and typescript.",
  "author": "LÃ©on Logli <leonlogli@gmail.com>",
  "main": "./dist/index.js",
  "private": false,
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leonlogli/recipoz-server.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "build": "yarn clean && tsc",
    "preserve": "yarn build",
    "serve": "node .",
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production pm2 start ./dist/index.js",
    "stop": "pm2 stop all",
    "lint": "tsc --noEmit && eslint */**/*.{js,ts} --quiet",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=lcov mocha --require ts-node/register --full-trace --bail --timeout 60000 --exit src/tests/**/*.test.ts",
    "test:unit": "cross-env NODE_ENV=test mocha --exit -r ts-node/register src/tests/unit/**/*.test.ts",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 60000 src/tests/integration/**/*.test.ts",
    "test:watch": "yarn test:unit --watch",
    "test:coverage": "yarn test && nyc report",
    "posttest:coverage": "open-cli coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags"
  },
  "keywords": [
    "apollo",
    "graphql",
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "es2020",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "typescript"
  ],
  "dependencies": {
    "apollo-server-express": "^2.9.15",
    "cross-env": "^6.0.3",
    "dot-object": "^2.1.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.8.0",
    "helmet": "^3.21.2",
    "http-status": "^1.4.1",
    "i18next": "^19.0.2",
    "i18next-express-middleware": "^1.9.1",
    "i18next-node-fs-backend": "^2.1.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.13",
    "pm2": "^4.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/chai-as-promised": "^7.1.2",
    "@types/dot-object": "^1.7.0",
    "@types/eslint": "^6.1.3",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.45",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.32",
    "@types/node": "^12.12.14",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "apollo-server-integration-testing": "^2.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "graphql-tag": "^2.10.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "mongodb-memory-server": "^6.1.1",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  }
}
